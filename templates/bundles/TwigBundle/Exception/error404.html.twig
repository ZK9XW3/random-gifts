        <h1 class="text-center mt-2">Error 404</h1>
        <h2 class="text-center mb-0">For some reason the magic didn't happen</h2>
        <div class="img-container d-flex justify-content-center">
            <img class="img-img" src="{{ asset('assets/img/unicorn1000px.png') }}" alt="christmas tree and gifts">
        </div>
        <div class="names-content">
            <p class="names-content-p"></p>
        </div>
        <div class="add-button-container mt-2">
            <a href="{{ path('home') }}" type="button" class="btn btn-info add-button mb-5" id="add-button">Back to site</a>
        </div>
    </div>
</main>
{% endblock %}
